@model IEnumerable<FrickdangoFilms.Models.Genre.GenreViewModel>

@{
    ViewData["Title"] = "Genre Index";
}

<div class="container mt-4">
    <h1 class="display-4">Genres</h1>
    
    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            No genres found.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>#</th>
                        <th>Genre</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var genre in Model)
                    {
                        <tr>
                            <td>@genre.GenreId</td>
                            <td>@genre.MovieGenre</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@genre.GenreId" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Details" asp-route-id="@genre.GenreId" class="btn btn-info btn-sm">Details</a>
                                <a asp-action="Delete" asp-route-id="@genre.GenreId" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    
    <a asp-action="Create" class="btn btn-primary mt-3">Create New Genre</a>
</div