@model FrickdangoFilms.Models.Theater.TheaterViewModel

@{
    ViewData["Title"] = "Delete Theater";
}

<div class="container mt-4">
        <h1 class="display-4">Delete Theater</h1>
    <div class="alert alert-warning">
        <strong>Warning</strong> You are about to delete the following theater. this cannot be undone.
    </div>
    <div class="card">
        <div class="card-header">
            <div class="card-header">
                <div class="card-body">
                    <h5 class="card-title">@Model.TheaterName</h5>
                </div>
                 <form action="ConfirmDelete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id"/>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>