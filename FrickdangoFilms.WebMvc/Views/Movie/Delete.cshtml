@model FrickdangoFilms.Models.Movies.MovieViewModel
@{
    ViewData["Title"] = "Delete Movie";
}

<div class="container mt-4">
    <h1 class="display-4">Delete Movie</h1>
    <div class="alert alert-warning">
        <strong>Warning</strong> You are about to delete the following movie. this cannot be undone.
    </div>
    <div class="card">
        <div class="card-header">
            Movie Details
        </div>
        <div class="card-body">
            <h5 class="card-title">@Model.MovieTitle</h5>
            <p class="card-text"><strong>Description</strong>@Model.MovieDescription</p>
            <p class="card.text"><strong>Runtime</strong>@Model.RuntimeInMinutes</p>
            <p class="card.text"><strong>Genre</strong>@Model.MovieGenre</p>
            <p class="card.text"><strong>MPAA Rating</strong>@Model.MPAA_Rating</p>
            <p class="card.text"><strong>Theater</strong>@Model.TheaterName</p>
        </div>
    </div>
    <form action="ConfirmDelete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id"/>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>